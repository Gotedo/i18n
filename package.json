{
  "name": "@adonisjs/i18n",
  "version": "1.6.0",
  "description": "Internationalization for AdonisJS apps",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/providers",
    "build/src",
    "build/stubs",
    "build/index.d.ts",
    "build/index.js",
    "build/configure.d.ts",
    "build/configure.js"
  ],
  "exports": {
    ".": "./build/index.js",
    "./types": "./build/src/types.js"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "c8 npm run vscode:test",
    "clean": "del-cli build",
    "typecheck": "tsc --noEmit",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copy:templates",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "release": "np",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels .github/labels.json adonisjs/i18n",
    "quick:test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^6.1.3-22",
    "@adonisjs/core": "^6.1.5-26",
    "@adonisjs/eslint-config": "^1.1.8",
    "@adonisjs/prettier-config": "^1.1.8",
    "@adonisjs/tsconfig": "^1.1.8",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@japa/assert": "^1.4.1",
    "@japa/runner": "^2.5.1",
    "@swc/core": "1.3.82",
    "@types/node": "^20.5.9",
    "c8": "^8.0.1",
    "copyfiles": "^2.4.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.16.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "np": "^8.0.4",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@poppinss/intl-formatter": "^3.0.0-3",
    "@poppinss/utils": "^6.5.0-6",
    "accepts": "^1.3.8",
    "intl-messageformat": "^10.5.0",
    "luxon": "^3.4.3",
    "yaml": "^2.3.2"
  },
  "author": "virk,adonisjs",
  "license": "MIT",
  "homepage": "https://github.com/adonisjs/antl#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adonisjs/antl.git"
  },
  "keywords": [
    "intl",
    "localization",
    "translation",
    "i18n"
  ],
  "bugs": {
    "url": "https://github.com/adonisjs/antl/issues"
  },
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "test_helpers/**",
      "stubs/**"
    ]
  }
}
